@{
    var cinemas = ViewBag.Cinemas as List<OnlineMovieTicket.Models.Cinema>; // thay bằng namespace đúng
    int? selectedCinemaId = ViewBag.SelectedCinemaId as int?;
}

<form method="get" asp-controller="ShowTimes" asp-action="Index" class="mb-3">
    <label for="cinemaId">Chọn rạp:</label>
    <select name="cinemaId" id="cinemaId" onchange="this.form.submit()" class="form-select" style="width:200px;display:inline-block;">
        <option value="">-- Tất cả các rạp --</option>
        @foreach (var cinema in cinemas)
        {
            if (selectedCinemaId == cinema.Id)
            {
                <option value="@cinema.Id" selected="selected">@cinema.Name</option>
            }
            else
            {
                <option value="@cinema.Id">@cinema.Name</option>
            }
        }
}
    </select>
</form>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Phim</th>
            <th>Phòng</th>
            <th>Rạp</th>
            <th>Giờ chiếu</th>
            <th>Giá vé</th>
            <th>Định dạng</th>
            <th>Trạng thái</th>
        </tr>
    </thead>
    <tbody>
    @foreach(var showtime in Model)
    {
        <tr>
            <td>@showtime.Movie.Title</td>
            <td>@showtime.Room.Name</td>
            <td>@showtime.Room.Cinema.Name</td>
            <td>@showtime.StartTime.ToString("HH:mm dd/MM/yyyy")</td>
            <td>@showtime.Price.ToString("N0") đ</td>
            <td>@showtime.Format</td>
            <td>@showtime.Status</td>
        </tr>
    }
    </tbody>
</table>