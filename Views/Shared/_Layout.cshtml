<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]Homepage - Online Movie Ticket</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OnlineMovieTicket.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="vnuis">
    <div>
        <div class="desktop-panel" id="desktop-panel">
            <div class="pre-header">
                 <div class="pre-header-button">
                      <partial name="_LoginPartial"/>
                 </div>
            </div>
        </div>
    </div>
    <div class="header">
        <div class="container">
            <div class="row">
                <a class="site-logo" href="/"><img alt style="height: 75px;" src="/img1.png"/></a>
                <div class="header-navigation">
                    <ul>
						<li id="BodyContent_ctl00_ctl06_rptMenu2_liNoChild_1">
							<a href="/Movies/Index">PHIM</a>
						</li>
						<li id="BodyContent_ctl00_ctl06_rptMenu2_liNoChild_2">
							<a href="/Cinemas/Index">RẠP</a>
						</li>
						<li id="BodyContent_ctl00_ctl06_rptMenu2_liNoChild_3">
							<a href="/Contact/Index.cshtml">TIN MỚI</a>
						</li>
						<li id="BodyContent_ctl00_ctl06_rptMenu2_liNoChild_4">
							<a href="/About/Index.cshtml">GIỚI THIỆU</a>
						</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    @* <footer class="border-top footer text-muted"> *@
    @* <div class="container">  *@
    @*         &copy; 2025 - OnlineMovieTicket  *@
    @*     </div>  *@
    @*  </footer>  *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>