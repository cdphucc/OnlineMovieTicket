<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Online Movie Ticket</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
</head>
<body>
    <div class="desktop-container">
        <div class="desktop-panel" id="desktop-panel">
            <div class="pre-header">
                <div class="pre-header-button">
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </div>
    </div>
    <div class="header">
        <div class="container">
            <div class="row">
                <a class="site-logo" style="width: 10%;" href="/"><img alt style="height: 75px;" src="/img1.png" /></a>
                <div class="header-navigation">
                    <ul>
                        <li><a href="/Movies/Index">PHIM</a></li>
                        <li><a href="@Url.Action("Index", "TransactionHistory")">LỊCH SỬ GIAO DỊCH</a></li>

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    ADMIN <i class="fas fa-chevron-down"></i>
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a href="@Url.Action("Index", "Admin")">Dashboard</a></li>
                                    <li><a href="@Url.Action("UserManagement", "Admin")">Quản lý người dùng</a></li>
                                    <li><a href="@Url.Action("MovieManagement", "Admin")">Quản lý phim</a></li>
                                    <li><a href="@Url.Action("ShowTimeManagement", "Admin")">Quản lý lịch chiếu</a></li>
                                    <li><a href="@Url.Action("BookingManagement", "Admin")">Quản lý đặt vé</a></li>
                                </ul>
                            </li>
                        }

                        @if (User.IsInRole("Manager"))
                        {
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    MANAGER <i class="fas fa-chevron-down"></i>
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a href="@Url.Action("Index", "Manager")">Dashboard</a></li>
                                    <li><a href="@Url.Action("Movies", "Manager")">Quản lý phim</a></li>
                                    <li><a href="@Url.Action("ShowTimes", "Manager")">Quản lý lịch chiếu</a></li>
                                    <li><a href="@Url.Action("Bookings", "Manager")">Xem đặt vé</a></li>
                                </ul>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Online Movie Ticket - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>