@using Microsoft.AspNetCore.Identity
@using OnlineMovieTicket.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav" style="flex-direction: row; align-items: center; margin-bottom: 0;">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item" style="margin-right:12px;">
            <a class="nav-link" style="color:#fff; font-size:14px; padding:0 8px; text-decoration:none;" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                Hello, @User.Identity?.Name!
            </a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" style="display:inline;">
                <button type="submit" class="nav-link btn btn-link" style="color:#fff; font-size:14px; padding:0 8px; text-decoration:underline; background:none; border:none;">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item" style="margin-right:8px;">
            <a class="nav-link" style="color:#fff; font-size:14px; padding:0 8px; text-decoration:none;" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
        <li class="nav-item" style="margin-left:0;">
            <span style="color:#fff;">|</span>
        </li>
        <li class="nav-item" style="margin-left:8px;">
            <a class="nav-link" style="color:#fff; font-size:14px; padding:0 8px; text-decoration:none;" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
    }
</ul>