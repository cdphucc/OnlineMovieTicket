@model IEnumerable<OnlineMovieTicket.Models.Movie>

@{
    ViewData["Title"] = "Trang chủ";
    var comingSoon = ViewBag.ComingSoon as List<OnlineMovieTicket.Models.Movie>;
    var nowShowing = ViewBag.NowShowing as List<OnlineMovieTicket.Models.Movie>;
}

<div class="movie-section">
    <h2>Phim sắp chiếu</h2>
    <div class="row">
        @foreach (var movie in comingSoon)
        {
            <div class="col-md-3">
                <div class="movie-card">
                    <img src="@movie.PosterUrl" alt="@movie.Title" class="movie-poster" />
                    <h4>@movie.Title</h4>
                    <p>Thể loại: @movie.Genre</p>
                    <p>Ngày chiếu: @movie.ReleaseDate.ToString("dd/MM/yyyy")</p>
                </div>
            </div>
        }
    </div>

    <h2>Phim đang chiếu</h2>
    <div class="row">
        @foreach (var movie in nowShowing)
        {
            <div class="col-md-3">
                <div class="movie-card">
                    <img src="@movie.PosterUrl" alt="@movie.Title" class="movie-poster" />
                    <h4>@movie.Title</h4>
                    <p>Thể loại: @movie.Genre</p>
                    <p>Thời lượng: @movie.Duration phút</p>
                </div>
            </div>
        }
    </div>
</div>