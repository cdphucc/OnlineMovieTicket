@model IEnumerable<OnlineMovieTicket.Models.Movie>
@{
    ViewBag.Title = "Trang chủ rạp phim";
    string tab = ViewBag.Tab ?? "nowshowing";
    var today = DateTime.Today;
}

<div class="banner">
    <img src="/banner.png" alt="Banner" style="width:100%;height:100%;object-fit:cover;" />
    </div>
<ul class="nav nav-tabs mb-4" style="font-size:18px;justify-content: center">
    <li class="nav-item">
        <a class="nav-link @(tab == "comingsoon" ? "active" : "")" href="@Url.Action("Index", new { tab = "comingsoon" })">PHIM SẮP CHIẾU</a>
    </li>
    <li class="nav-item">
        <a class="nav-link @(tab == "nowshowing" ? "active" : "")" href="@Url.Action("Index", new { tab = "nowshowing" })">PHIM ĐANG CHIẾU</a>
    </li>
</ul>

<div class="row" style="justify-content:center;">
    @foreach (var movie in Model)
    {
        <div class="col-md-3 mb-4 d-flex align-items-stretch">
            <div class="card shadow-sm" style="width: 16rem;">
                <img class="card-img-top" src="@movie.PosterUrl" alt="@movie.Title" style="height:330px;object-fit:cover;">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title" style="min-height:48px;">@movie.Title</h5>
                    <p class="card-text"><b>Thể loại:</b> @movie.Genre</p>
                    <p class="card-text"><b>Thời lượng:</b> @movie.Duration phút</p>
                    <p class="card-text"><b>Khởi chiếu:</b> @movie.ReleaseDate.ToString("dd/MM/yyyy")</p>
                    @if (tab == "comingsoon")
                    {
                        var preOrderStart = movie.ReleaseDate.AddDays(-7);
                        if (today >= preOrderStart && today < movie.ReleaseDate)
                        {
                            <button class="btn btn-warning mt-auto" onclick="openShowtimeModal(@movie.Id, '@movie.Title.Replace("'", "\\'")')">ĐẶT VÉ TRƯỚC</button>
                        }
                    }
                    else if (tab == "nowshowing")
                    {
                        <button class="btn btn-primary mt-auto" onclick="openShowtimeModal(@movie.Id, '@movie.Title.Replace("'", "\\'")')">MUA VÉ</button>
                    }
                </div>
            </div>
        </div>
    }
</div>
<div class="modal fade" id="showtimeModal" tabindex="-1" aria-labelledby="showtimeModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="showtimeModalLabel">
                    Chọn lịch chiếu cho <span id="modalMovieTitle"></span>
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="showtimeList">Đang tải...</div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-primary" id="confirmShowtimeBtn" disabled>Xác nhận</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            let selectedShowtimeId = null;
            const showtimeModal = new bootstrap.Modal(document.getElementById('showtimeModal'));

            window.openShowtimeModal = function (movieId, movieTitle) {
                document.getElementById('modalMovieTitle').textContent = movieTitle;
                document.getElementById('showtimeList').innerHTML = 'Đang tải...';
                document.getElementById('confirmShowtimeBtn').disabled = true;
                selectedShowtimeId = null;
                showtimeModal.show();

                fetch('/ShowTimes/GetByMovie?movieId=' + movieId)
                    .then(response => response.json())
                    .then(data => {
                        let html = '';
                        if (data.length === 0) {
                            html = '<p>Chưa có lịch chiếu cho phim này.</p>';
                        } else {
                            data.forEach(st => {
                                html += `<div class="form-check">
                                    <input class="form-check-input" type="radio" name="showtime" value="${st.id}" id="showtime${st.id}">
                                    <label class="form-check-label" for="showtime${st.id}">${st.startTime} - Phòng: ${st.roomName}</label>
                                </div>`;
                            });
                        }
                        document.getElementById('showtimeList').innerHTML = html;
                        document.querySelectorAll('input[name="showtime"]').forEach(el => {
                            el.addEventListener('change', function () {
                                selectedShowtimeId = this.value;
                                document.getElementById('confirmShowtimeBtn').disabled = false;
                            });
                        });
                    });
            }
            document.getElementById('confirmShowtimeBtn').addEventListener('click', function () {
                if (selectedShowtimeId) {
                    window.location.href = '/Bookings/SelectSeat?showTimeId=' + selectedShowtimeId;
                }
            });
        });
    </script>
}