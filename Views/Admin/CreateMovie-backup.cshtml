@model OnlineMovieTicket.Models.Movie
@{
    ViewData["Title"] = "Thêm phim mới";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2 class="mb-4">
                <i class="fas fa-plus"></i> Thêm phim mới
                <a href="@Url.Action("MovieManagement")" class="btn btn-secondary float-right">
                    <i class="fas fa-arrow-left"></i> Quay lại
                </a>
            </h2>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <form asp-action="CreateMovie" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row">
                    <div class="col-md-8">
                        <div class="form-group">
                            <label asp-for="Title" class="control-label">Tên phim</label>
                            <input asp-for="Title" class="form-control" placeholder="Nhập tên phim..." />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Description" class="control-label">Mô tả</label>
                            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Nhập mô tả phim..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Genre" class="control-label">Thể loại</label>
                                    <select asp-for="Genre" class="form-control">
                                        <option value="">-- Chọn thể loại --</option>
                                        @foreach (var genre in ViewBag.Genres as List<string>)
                                        {
                                            <option value="@genre">@genre</option>
                                        }
                                    </select>
                                    <span asp-validation-for="Genre" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Duration" class="control-label">Thời lượng (phút)</label>
                                    <input asp-for="Duration" class="form-control" type="number" min="1" placeholder="120" />
                                    <span asp-validation-for="Duration" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="ReleaseDate" class="control-label">Ngày phát hành</label>
                                    <input asp-for="ReleaseDate" class="form-control" type="date" />
                                    <span asp-validation-for="ReleaseDate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Status" class="control-label">Trạng thái</label>
                                    <select asp-for="Status" class="form-control">
                                        @foreach (var status in ViewBag.Statuses as List<string>)
                                        {
                                            <option value="@status">
                                                @switch (status)
                                                {
                                                    case "NowShowing":
                                                        @:Đang chiếu
                                                        break;
                                                    case "ComingSoon":
                                                        @:Sắp chiếu
                                                        break;
                                                    case "Ended":
                                                        @:Đã kết thúc
                                                        break;
                                                    default:
                                                        @status
                                                        break;
                                                }
                                            </option>
                                        }
                                    </select>
                                    <span asp-validation-for="Status" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="TrailerUrl" class="control-label">URL Trailer</label>
                            <input asp-for="TrailerUrl" class="form-control" placeholder="https://youtube.com/..." />
                            <span asp-validation-for="TrailerUrl" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="control-label">Poster phim</label>
                            <div class="custom-file">
                                <input type="file" name="posterFile" class="custom-file-input" id="posterFile" accept="image/*">
                                <label class="custom-file-label" for="posterFile">Chọn file...</label>
                            </div>
                            <small class="form-text text-muted">Chọn file ảnh (JPG, PNG, GIF)</small>
                        </div>

                        <div class="form-group">
                            <div id="posterPreview" style="display: none;">
                                <img id="previewImage" src="#" alt="Preview" style="width: 100%; max-width: 300px; height: auto; border: 1px solid #ddd; border-radius: 4px; padding: 5px;">
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group mt-3">
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save"></i> Thêm phim
                    </button>
                    <a href="@Url.Action("MovieManagement")" class="btn btn-secondary ml-2">
                        <i class="fas fa-times"></i> Hủy
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Preview poster
        $("#posterFile").change(function() {
            var input = this;
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function(e) {
                    $('#previewImage').attr('src', e.target.result);
                    $('#posterPreview').show();
                }
                reader.readAsDataURL(input.files[0]);

                // Update label
                var fileName = input.files[0].name;
                $(this).next('.custom-file-label').text(fileName);
            }
        });
    </script>
}