@model IEnumerable<OnlineMovieTicket.Models.Movie>
@{
    ViewData["Title"] = "Quản lý phim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <h2 class="mb-4">
                <i class="fas fa-film"></i> Quản lý phim
                <a href="@Url.Action("CreateMovie")" class="btn btn-success float-right">
                    <i class="fas fa-plus"></i> Thêm phim mới
                </a>
            </h2>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
                <button type="button" class="close" data-dismiss="alert">
                    <span>&times;</span>
                </button>
            </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
                <button type="button" class="close" data-dismiss="alert">
                    <span>&times;</span>
                </button>
            </div>
    }

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th>Poster</th>
                            <th>Tên phim</th>
                            <th>Thể loại</th>
                            <th>Thời lượng</th>
                            <th>Ngày phát hành</th>
                            <th>Trạng thái</th>
                            <th>Suất chiếu</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var movie in Model)
                        {
                                <tr>
                                    <td>
                                    @if (!string.IsNullOrEmpty(movie.PosterUrl))
                                    {
                                                <img src="@movie.PosterUrl" alt="@movie.Title" style="width: 50px; height: 75px; object-fit: cover;">
                                    }
                                    else
                                    {
                                                <div style="width: 50px; height: 75px; background-color: #ddd; display: flex; align-items: center; justify-content: center;">
                                                    <i class="fas fa-image"></i>
                                                </div>
                                    }
                                    </td>
                                    <td>
                                        <strong>@movie.Title</strong>
                                        <br>
                                        <small class="text-muted">@(movie.Description?.Length > 50 ? movie.Description.Substring(0, 50) + "..." : movie.Description)</small>
                                    </td>
                                    <td>@movie.Genre</td>
                                    <td>@movie.Duration phút</td>
                                    <td>@movie.ReleaseDate.ToString("dd/MM/yyyy")</td>
                                    <td>
                                    @switch (movie.Status)
                                    {
                                        case "NowShowing":
                                                        <span class="badge badge-success">Đang chiếu</span>
                                            break;
                                        case "ComingSoon":
                                                        <span class="badge badge-warning">Sắp chiếu</span>
                                            break;
                                        case "Ended":
                                                        <span class="badge badge-secondary">Đã kết thúc</span>
                                            break;
                                        default:
                                                        <span class="badge badge-light">@movie.Status</span>
                                            break;
                                    }
                                    </td>
                                    <td>
                                        <span class="badge badge-info">@movie.ShowTimes?.Count() suất</span>
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a href="@Url.Action("EditMovie", new { id = movie.Id })" class="btn btn-sm btn-warning">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <button type="button" class="btn btn-sm btn-danger" data-toggle="modal" data-target="#deleteModal-@movie.Id">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>

                                <!-- Delete Modal -->
                                <div class="modal fade" id="deleteModal-@movie.Id" tabindex="-1" role="dialog">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title">Xác nhận xóa</h5>
                                                <button type="button" class="close" data-dismiss="modal">
                                                    <span>&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                Bạn có chắc chắn muốn xóa phim "<strong>@movie.Title</strong>"?
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                                                <form asp-action="DeleteMovie" method="post" style="display: inline;">
                                                    <input type="hidden" name="id" value="@movie.Id" />
                                                    <button type="submit" class="btn btn-danger">Xóa</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
        <script src="https://kit.fontawesome.com/your-fontawesome-kit.js"></script>
}