@model List<OnlineMovieTicket.Models.ApplicationUser>
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <h2 class="mb-4">
                <i class="fas fa-crown me-2"></i>Admin Dashboard - Toàn Quyền Hệ Thống
            </h2>

            <div class="row mb-4">
                <div class="col-md-3">
                    <div class="card bg-primary text-white">
                        <div class="card-body">
                            <h5>Tổng Users</h5>
                            <h3>@Model.Count</h3>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-danger text-white">
                        <div class="card-body">
                            <h5>Admins</h5>
                            <h3>@Model.Count(u => u.Role == OnlineMovieTicket.Models.UserRole.Admin)</h3>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-warning text-white">
                        <div class="card-body">
                            <h5>Managers</h5>
                            <h3>@Model.Count(u => u.Role == OnlineMovieTicket.Models.UserRole.Manager)</h3>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-info text-white">
                        <div class="card-body">
                            <h5>Customers</h5>
                            <h3>@Model.Count(u => u.Role == OnlineMovieTicket.Models.UserRole.Customer)</h3>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h5>Quản Lý Hệ Thống</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-4 mb-3">
                                    <a href="@Url.Action("UserManagement")" class="btn btn-primary btn-lg w-100">
                                        <i class="fas fa-users mb-2 d-block"></i>
                                        Quản Lý Users
                                    </a>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <a href="@Url.Action("Movies", "Manager")" class="btn btn-secondary btn-lg w-100">
                                        <i class="fas fa-film mb-2 d-block"></i>
                                        Quản Lý Phim
                                    </a>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <a href="@Url.Action("Bookings", "Manager")" class="btn btn-info btn-lg w-100">
                                        <i class="fas fa-ticket-alt mb-2 d-block"></i>
                                        Xem Tất Cả Bookings
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>