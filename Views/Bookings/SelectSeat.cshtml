@model IEnumerable<OnlineMovieTicket.Models.Seat>

@{
    ViewData["Title"] = "Chọn ghế";
    var showTime = ViewBag.ShowTime as OnlineMovieTicket.Models.ShowTime;
    var bookedSeatIds = ViewBag.BookedSeatIds as HashSet<int>;
}

<h2>Chọn ghế</h2>
<p>Suất chiếu: @showTime.StartTime.ToString("dd/MM/yyyy HH:mm") - Phòng: @showTime.Room.Name</p>

<form method="post" action="/Bookings/Payment">
    <input type="hidden" name="showTimeId" value="@showTime.Id" />
    <div class="seat-grid">
        @foreach (var seat in Model)
        {
            <div class="seat">
                <input type="checkbox" name="selectedSeats" value="@seat.Id" @(bookedSeatIds.Contains(seat.Id) ? "disabled" : "") />
                <label>@seat.SeatNumber</label>
            </div>
        }
    </div>
    <button type="submit" class="btn btn-success">Thanh toán</button>
</form>