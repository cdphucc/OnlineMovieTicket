@model List<OnlineMovieTicket.Models.Seat>
@{
    var showtime = ViewBag.ShowTime as OnlineMovieTicket.Models.ShowTime;
    var bookedSeatIds = ViewBag.BookedSeatIds as HashSet<int>;
}
<h2>Chọn ghế cho phim @showtime.Movie.Title - @showtime.StartTime.ToString("dd/MM/yyyy HH:mm")</h2>
<form asp-action="ConfirmBooking" method="post">
    <input type="hidden" name="showTimeId" value="@showtime.Id" />
    <div class="seat-map">
        @foreach (var seat in Model)
        {
            bool isBooked = bookedSeatIds.Contains(seat.Id);
            <label class="seat-label" style="margin: 8px; display:inline-block;">
                <input type="checkbox" name="selectedSeats" value="@seat.Id" @(isBooked ? "disabled" : "") />
                @seat.SeatNumber @(isBooked ? "(Đã đặt)" : "")
            </label>
        }
    </div>
    <button type="submit">Tiếp tục</button>
</form>