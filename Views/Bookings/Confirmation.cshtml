@model OnlineMovieTicket.Models.Booking
@{
    ViewBag.Title = "Xác nhận đặt vé";
}
@if (Model != null && Model.BookingDetails != null && Model.BookingDetails.Any())
{
    <h2>Đặt vé thành công!</h2>
    <p>Mã đặt vé: <b>@Model.Id</b></p>
    <p>Phim: <b>@Model.BookingDetails.First().ShowTime?.Movie?.Title</b></p>
    <p>Suất chiếu: <b>@Model.BookingDetails.First().ShowTime?.StartTime.ToString("dd/MM/yyyy HH:mm")</b></p>
    <p>
        Ghế:
        @foreach (var detail in Model.BookingDetails)
        {
            <span>@detail.Seat?.SeatNumber </span>
        }
    </p>
    <p>Tổng tiền: <b>@Model.TotalAmount.ToString("n0") VNĐ</b></p>
    <p>Cảm ơn bạn đã thanh toán thành công!</p>
}
else
{
    <p>Không tìm thấy thông tin đặt vé.</p>
}
