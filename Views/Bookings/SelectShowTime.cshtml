@model IEnumerable<OnlineMovieTicket.Models.ShowTime>

@{
    ViewData["Title"] = "Chọn suất chiếu";
}

<h2>Chọn suất chiếu</h2>
@if (Model.Any())
{
    <div class="row">
        @foreach (var showtime in Model)
        {
            <div class="col-md-3">
                <div class="showtime-card">
                    <h4>@showtime.StartTime.ToString("dd/MM/yyyy HH:mm")</h4>
                    <p>Phòng chiếu: @showtime.Room.Name</p>
                    <a href="/Bookings/SelectSeat?showTimeId=@showtime.Id" class="btn btn-primary">Chọn ghế</a>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>Hiện tại không có suất chiếu nào cho phim này.</p>
}