@model OnlineMovieTicket.Models.ViewModels.TransactionHistoryViewModel
@{
    ViewData["Title"] = "Lịch sử giao dịch";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-history"></i> Lịch sử giao dịch</h2>
                <div class="text-muted">
                    Tổng cộng: <strong>@Model.TotalCount</strong> giao dịch
                </div>
            </div>

            <!-- Filter -->
            <div class="card mb-4">
                <div class="card-body">
                    <form method="get" class="row g-3">
                        <div class="col-md-3">
                            <label class="form-label">Trạng thái</label>
                            <select name="status" class="form-select">
                                <option value="">Tất cả</option>
                                <option value="Pending">Chờ thanh toán</option>
                                <option value="Completed">Đã hoàn thành</option>
                                <option value="Cancelled">Đã hủy</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">&nbsp;</label>
                            <div>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-search"></i> Lọc
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            @if (Model.Bookings.Any())
            {
                <!-- Transaction List -->
                @foreach (var booking in Model.Bookings)
                {
                    var statusClass = booking.Status switch
                    {
                        "Completed" => "bg-success",
                        "Pending" => "bg-warning text-dark",
                        "Cancelled" => "bg-danger",
                        _ => "bg-secondary"
                    };
                    var statusText = booking.Status switch
                    {
                        "Completed" => "Đã hoàn thành",
                        "Pending" => "Chờ thanh toán",
                        "Cancelled" => "Đã hủy",
                        _ => booking.Status
                    };

                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-8">
                                    <div class="d-flex align-items-center mb-2">
                                        <h5 class="mb-0 me-3">
                                            @if (booking.BookingDetails.Any())
                                            {
                                                @booking.BookingDetails.First().ShowTime.Movie.Title
                                            }
                                        </h5>
                                        <span class="badge @statusClass">
                                            @statusText
                                        </span>
                                    </div>

                                    <div class="text-muted mb-2">
                                        <i class="fas fa-calendar"></i>
                                        @booking.BookingTime.ToString("dd/MM/yyyy HH:mm")
                                    </div>

                                    @if (booking.BookingDetails.Any())
                                    {
                                        <div class="text-muted mb-2">
                                            <i class="fas fa-clock"></i>
                                            Suất chiếu: @booking.BookingDetails.First().ShowTime.StartTime.ToString("dd/MM/yyyy HH:mm")
                                        </div>

                                        <div class="text-muted">
                                            <i class="fas fa-map-marker-alt"></i>
                                            @booking.BookingDetails.First().ShowTime.Room.Name -
                                            Ghế: @string.Join(", ", booking.BookingDetails.Select(bd => $"{bd.Seat.Row}{bd.Seat.Column}"))
                                        </div>
                                    }
                                </div>

                                <div class="col-md-4 text-end">
                                    <div class="h5 text-primary mb-3">
                                        @booking.TotalAmount.ToString("N0") VND
                                    </div>

                                    <div class="btn-group">
                                        <a href="@Url.Action("Details", new { id = booking.Id })"
                                           class="btn btn-outline-primary btn-sm">
                                            <i class="fas fa-eye"></i> Chi tiết
                                        </a>

                                        @if (booking.Status == "Pending")
                                        {
                                            <button type="button"
                                                    class="btn btn-outline-danger btn-sm"
                                                    onclick="cancelBooking(@booking.Id)">
                                                <i class="fas fa-times"></i> Hủy
                                            </button>
                                        }

                                        @if (booking.Status == "Completed")
                                        {
                                            <a href="@Url.Action("ExportToPdf", new { id = booking.Id })"
                                               class="btn btn-outline-success btn-sm">
                                                <i class="fas fa-download"></i> Tải vé
                                            </a>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }

                <!-- Pagination -->
                @if (Model.TotalPages > 1)
                {
                    <nav aria-label="Page navigation">
                        <ul class="pagination justify-content-center">
                            @if (Model.HasPreviousPage)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Index", new { page = Model.CurrentPage - 1, status = Model.StatusFilter })">
                                        Trước
                                    </a>
                                </li>
                            }

                            @for (int i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
                            {
                                var pageClass = i == Model.CurrentPage ? "active" : "";
                                <li class="page-item @pageClass">
                                    <a class="page-link" href="@Url.Action("Index", new { page = i, status = Model.StatusFilter })">
                                        @i
                                    </a>
                                </li>
                            }

                            @if (Model.HasNextPage)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Index", new { page = Model.CurrentPage + 1, status = Model.StatusFilter })">
                                        Sau
                                    </a>
                                </li>
                            }
                        </ul>
                    </nav>
                }
            }
            else
            {
                <div class="card">
                    <div class="card-body text-center py-5">
                        <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                        <h5>Chưa có giao dịch nào</h5>
                        <p class="text-muted">Bạn chưa thực hiện giao dịch nào. Hãy <a href="@Url.Action("Index", "Home")">đặt vé xem phim</a> ngay!</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Set selected option based on current filter
        document.addEventListener('DOMContentLoaded', function() {
            var statusSelect = document.querySelector('select[name="status"]');
            var currentStatus = '@Html.Raw(Model.StatusFilter)';
            if (statusSelect && currentStatus) {
                statusSelect.value = currentStatus;
            }
        });

        function cancelBooking(bookingId) {
            if (confirm('Bạn có chắc chắn muốn hủy booking này?')) {
                $.ajax({
                    url: '@Url.Action("CancelBooking")',
                    type: 'POST',
                    data: {
                        id: bookingId,
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function(response) {
                        if (response.success) {
                            alert(response.message);
                            location.reload();
                        } else {
                            alert(response.message);
                        }
                    },
                    error: function() {
                        alert('Có lỗi xảy ra. Vui lòng thử lại.');
                    }
                });
            }
        }
    </script>
}